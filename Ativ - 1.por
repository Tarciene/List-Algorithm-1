programa {
  funcao inicio() {
  inteiro num1, num2, soma

  escreva("Digite dois números, para somá-los: \n")  
  escreva("1° número: ")
  leia(num1)

  escreva("2° número: ")
  leia(num2)

  soma = num1 + num2

  escreva("---------------------- \n")
  escreva(num1, " + ", num2, " = ", soma)
  }
}
