programa {
  funcao inicio() {
  real num1, num2, num3, media

  escreva("Digite três números para descobrir a média: \n")
  escreva("1° num: ")
  leia(num1)

  escreva("2° num: ")
  leia(num2)

  escreva("3° num: ")
  leia(num3)

  media = (num1 + num2 + num3) / 3 

  escreva("---------------------- \n")
  escreva("Média: ", media)
  }
}
